[
  {
    "Action": [
      "dynamodb:GetItem",
      "dynamodb:PutItem",
      "dynamodb:DeleteItem",
      "dynamodb:UpdateItem",
      "dynamodb:Scan",
      "dynamodb:Query"
    ],
    "Resource": [
      {
        "Fn::Sub": [
          "arn:aws:dynamodb:${region}:${account}:table/${tableName}",
          {
            "region": {
              "Ref": "AWS::Region"
            },
            "account": {
              "Ref": "AWS::AccountId"
            },
            "tableName": {
              "Ref": "productsTable"
            }
          }
        ]
      }
    ]
  }
]